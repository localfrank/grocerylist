#: import TextInput kivy.uix.textinput

<AddNewPopup>:
    auto_dismiss: False
    #  todo set the date on the title
    title: app.getDate() + " New Shopping List"
    BoxLayout:
        orientation: "vertical"
        TextInput:

        BoxLayout:
            # Cancel New/Edit item
            Button:
                text: "Cancel"
                on_press: root.dismiss()
            # Save the item
            Button:
                text: "Save"
                on_press: root.dismiss()


<AppRootLayout>:
    orientation: "vertical"

    # BoxLayout:

        # Popup: When clicked the popup opens
    Button:
        text: "Add New"
        on_press: root.open_addnew_popup()
